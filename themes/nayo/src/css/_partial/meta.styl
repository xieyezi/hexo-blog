//
// tag
//
.tag-wrap
	@extend $tags
	display inline-block
	margin .4rem .3rem
	padding  2px 12px
	&>.tag-name
		font-size 0.9rem
	&>.tag-count
		font-size 0.825rem

//
// archive
//
.archive-count
	text-align center
	margin 0 auto
	margin-bottom 1rem
	&> .archive-count-inner
		font-size .85rem


.archive-part
	margin 1.5rem 1rem 0
	text-align right
	& >.archive-part-item
		border-bottom 2px solid $line-clr
		padding 6px 7px
		border-radius 3px
		font-size 0.825rem
		color rgba(0,0,0,0.65)
		letter-spacing 1px
		cursor pointer
		transition all .2s ease-in-out
		&:hover
			color $thr-clr


.archive-item
	display flex
	position relative
	align-items center
	padding 8px 60px
	&:after
		content ""
		position absolute
		left 10%
		bottom 0
		width 80%
		height 1px
		background-color $line-shallow-clr
	&>.archive-time
		width 38%
		font-size 0.825rem
		color rgba(0,0,0,.65)
		text-align center
		margin 10px 0
	&>.archive-title
		width 62%
		font-size 1.05rem
		display inline-block
		text-align left
		margin 14px 0
